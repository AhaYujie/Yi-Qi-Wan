<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFFFF"
    android:onClick="ClickActivity"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:visibility="invisible"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="19dp"></View>
                <TextView
                    android:id="@+id/my_collection_activity_title"
                    android:text="这是标题"
                    android:textSize="19dp"
                    android:textColor="#000000"
                    android:layout_weight="20"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="60dp"></View>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <View
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="19dp"></View>

                <TextView
                    android:id="@+id/smy_collection_activity_time"
                    android:gravity="left"
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_height="wrap_content"
                    android:text="2019-19-17 15:50" />

                <View
                    android:visibility="invisible"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="19dp">
                </View>

                <ImageView
                    android:id="@+id/my_collection_activity_eye"
                    android:src="@drawable/ic_eye_grey"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="19dp" />

                <TextView
                    android:id="@+id/my_collection_activity_pageviews"
                    android:gravity="left"
                    android:text="500"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/my_collection_activity_pic"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:src="@drawable/ic_mine_black" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp"></View>
    <View
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</LinearLayout>