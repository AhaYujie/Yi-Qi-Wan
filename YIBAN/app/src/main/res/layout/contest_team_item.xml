<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <ImageView
        android:id="@+id/contest_team_face"
        android:layout_width="@dimen/contest_team_face_size"
        android:layout_height="@dimen/contest_team_face_size"
        android:padding="10dp"
        android:src="@drawable/ic_mine_black"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/contest_team_person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/contestTeamPersonName"
            android:textSize="@dimen/contest_team_info_size"
            android:text="aha"/>

        <TextView
            android:id="@+id/contest_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/contestTeamName"
            android:textSize="@dimen/contest_team_info_size"
            android:text="队伍:我是18的咸鱼"/>

        <TextView
            android:id="@+id/contest_team_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/contestTeamNumber"
            android:textSize="@dimen/contest_team_info_size"
            android:text="需要小伙伴6名"/>

        <TextView
            android:id="@+id/contest_team_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textColor="@color/contestTeamComment"
            android:textSize="@dimen/contest_team_comment_size"
            android:lineSpacingMultiplier="@string/line_spacing_multiplier"
            android:text="@string/contest_team_comment"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/contest_team_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textColor="@color/contestHint"
                android:textSize="@dimen/contest_hint_text_size"
                android:text="现在"/>

            <Button
                android:id="@+id/contest_team_join"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_contest_team_join"
                android:minHeight="@dimen/contest_team_join_height"
                android:minWidth="@dimen/contest_team_join_width"
                android:textColor="@color/contestTeamJoinButton"
                android:textSize="@dimen/contest_hint_text_size"
                android:text="@string/contest_team_join"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>