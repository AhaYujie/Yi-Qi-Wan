<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/search_result"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_item_height"
    android:background="@drawable/layout_selector"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/search_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/search_result_pic"
        android:layout_above="@+id/search_result_time"
        android:textSize="@dimen/home_item_title_size"
        android:textColor="@color/home_item_title"
        android:maxLines="2"
        android:ellipsize="end"
        android:lineSpacingMultiplier="@string/line_spacing_multiplier"/>

    <TextView
        android:id="@+id/search_result_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/home_item_hint_size"
        android:textColor="@color/home_hint"/>

    <ImageView
        android:id="@+id/search_result_eye"
        android:layout_width="@dimen/home_item_eye_size"
        android:layout_height="@dimen/home_item_eye_size"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/search_result_time"
        android:src="@drawable/ic_eye_grey"/>

    <TextView
        android:id="@+id/search_result_pageviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="3dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/search_result_eye"
        android:textSize="@dimen/home_item_hint_size"
        android:textColor="@color/home_hint"/>

    <ImageView
        android:id="@+id/search_result_pic"
        android:layout_width="140dp"
        android:layout_height="@dimen/home_item_height"
        android:layout_alignParentEnd="true"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/boundaryLine">
    </LinearLayout>

</RelativeLayout>