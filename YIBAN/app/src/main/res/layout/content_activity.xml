<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.activity.ActivityActivity"
    tools:showIn="@layout/activity_activity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/activity_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textIsSelectable="true"
                android:textColor="@color/myTitle"
                android:textSize="@dimen/my_title_size"/>

            <TextView
                android:id="@+id/activity_content_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textColor="@color/myHint"
                android:textSize="@dimen/my_hint_text_size"/>

            <com.sendtion.xrichtext.RichTextView
                android:id="@+id/activity_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rt_view_text_line_space="6dp"
                app:rt_view_text_size="@dimen/my_content_size"
                app:rt_view_text_color="@color/myCommentText"
                app:rt_view_image_height="0"
                app:rt_view_image_bottom="10">

            </com.sendtion.xrichtext.RichTextView>

            <WebView
                android:id="@+id/activity_content_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
            </WebView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="15dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/myHint"
                    android:textSize="@dimen/my_hint_text_size"
                    android:text="@string/content_source"/>

                <TextView
                    android:id="@+id/activity_source"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:textIsSelectable="true"
                    android:textColor="@color/myHint"
                    android:textSize="@dimen/my_hint_text_size"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/boundaryLine"/>

            <TextView
                android:id="@+id/activity_comment_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="15dp"
                android:textColor="@color/myTitleColor"
                android:textSize="@dimen/my_title_size"
                android:text="@string/my_comment_title"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/activity_comment_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:text="@string/my_no_more_comment"
                    android:textSize="@dimen/my_hint_text_size"
                    android:textColor="@color/myHint"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>