<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="21dp"></View>

        <TextView
            android:id="@+id/my_blog_title"
            android:textColor="#000000"
            android:textSize="16dp"
            android:text="Bilibili干杯！！！"
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="19dp"></View>

        <TextView
            android:id="@+id/my_blog_time"
            android:gravity="left"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:text="2019-19-17 15:50" />

        <View
            android:visibility="invisible"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="19dp">
        </View>

        <ImageView
            android:id="@+id/my_blog_eye"
            android:src="@drawable/ic_eye_grey"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="19dp" />

        <TextView
            android:id="@+id/my_blog_pageviews"
            android:gravity="left"
            android:text="500"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
    <View
        android:background="#000000"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</LinearLayout>